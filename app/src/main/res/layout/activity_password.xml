<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background"
    android:id="@+id/password_layout"
    tools:context=".activities.PasswordActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <Button
                    android:id="@+id/sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="sign up"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_margin="30dp">

                </Button>

                <Button
                    android:id="@+id/change_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="change password"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:layout_margin="30dp">

                </Button>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/password_ed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:maxLines="50"
            android:padding="10dp"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:enabled="false"
            android:maxLength="4">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <Button
                    android:id="@+id/b_seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="7"
                    android:textColor="#fff"
                    android:textSize="50sp"
                    android:padding="20dp">
                </Button>

                <Button
                    android:id="@+id/b_eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="8"
                    android:textColor="#fff"
                    android:textSize="50sp">
                </Button>

                <Button
                    android:id="@+id/b_nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="9"
                    android:textColor="#fff"
                    android:textSize="50sp">
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <Button
                    android:id="@+id/b_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="4"
                    android:textColor="#fff"
                    android:textSize="50sp"
                    android:padding="20dp">
                </Button>

                <Button
                    android:id="@+id/b_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="5"
                    android:textColor="#fff"
                    android:textSize="50sp">
                </Button>

                <Button
                    android:id="@+id/b_six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="6"
                    android:textColor="#fff"
                    android:textSize="50sp">
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <Button
                    android:id="@+id/b_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="1"
                    android:textColor="#fff"
                    android:textSize="50sp"
                    android:padding="20dp">
                </Button>

                <Button
                    android:id="@+id/b_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="50sp">
                </Button>

                <Button
                    android:id="@+id/b_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="3"
                    android:textColor="#fff"
                    android:textSize="50sp">
                </Button>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <Button
                    android:id="@+id/b_clear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="C"
                    android:textColor="#fff"
                    android:textSize="50sp"
                    android:padding="20dp">
                </Button>

                <Button
                    android:id="@+id/b_zero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="0"
                    android:textColor="#fff"
                    android:textSize="50sp">
                </Button>

                <Button
                    android:id="@+id/b_enter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="OK"
                    android:textColor="#fff"
                    android:textSize="50sp">
                </Button>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <ImageButton
                android:id="@+id/b_fingerprint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fingerprint"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
